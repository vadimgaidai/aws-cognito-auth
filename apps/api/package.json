{
  "name": "@repo/api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "CONF=development && env-cmd -f .env.$CONF nest start",
    "dev": "CONF=development && env-cmd -f .env.$CONF nest start --watch",
    "dev:debug": "CONF=development && env-cmd -f .env.$CONF nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "docker-compose-up": "CONF=development && env-cmd -f .env.$CONF docker-compose up -d",
    "docker-compose-down": "CONF=development && env-cmd -f .env.$CONF docker-compose down",
    "typeorm": "CONF=development && env-cmd -f .env.$CONF ts-node-dev -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "pnpm typeorm migration:create database/migrations/$npm_config_name",
    "migration:run": "pnpm typeorm migration:run -d database/typeorm.ts",
    "migration:revert": "pnpm typeorm migration:revert -d database/typeorm.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:staged": "lint-staged --relative"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/mapped-types": "^2.0.5",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^8.0.0",
    "@nestjs/typeorm": "^10.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "env-cmd": "^10.1.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.2.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/express": "^4.17.13",
    "@types/node": "18.11.18",
    "source-map-support": "^0.5.21",
    "swagger-ui-express": "^5.0.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^5"
  }
}
